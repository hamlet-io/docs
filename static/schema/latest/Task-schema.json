{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "process_template_pass": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "outputConversion": {
          "type": "string"
        },
        "passAlternative": {
          "type": "string"
        },
        "outputFileName": {
          "type": "string"
        },
        "pass": {
          "type": "string"
        },
        "outputType": {
          "type": "string"
        },
        "deploymentUnitSubset": {
          "type": "string"
        },
        "outputFormat": {
          "type": "string"
        }
      },
      "required": [
        "outputType",
        "outputFormat",
        "outputConversion",
        "pass",
        "passAlternative",
        "outputFileName",
        "deploymentUnitSubset"
      ]
    },
    "aws_decrypt_kms_ciphertext": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "EncryptionScheme": {
          "description": "A scheme prefix to show that the value is encrypted",
          "type": "string"
        },
        "AWSSecretAccessKey": {
          "description": "The AWS Secret Access Key with access to decrypt",
          "type": "string"
        },
        "Ciphertext": {
          "description": "The ciphertext value",
          "type": "string"
        },
        "AWSSessionToken": {
          "description": "The AWS Session Token with access to decrypt",
          "type": "string"
        },
        "Region": {
          "description": "The name of the region to use for the aws session",
          "type": "string"
        },
        "AWSAccessKeyId": {
          "description": "The AWS Access Key Id with access to decrypt",
          "type": "string"
        },
        "Base64Encoded": {
          "default": true,
          "description": "Is the Ciphertext base64 encoded",
          "type": "boolean"
        }
      },
      "required": [
        "Ciphertext"
      ]
    },
    "set_provider_credentials": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "ProviderId": {
          "description": "The Id that represents the account with the provider",
          "type": "string"
        },
        "AccountId": {
          "description": "The hamlet Account Id for the provider login",
          "type": "string"
        },
        "Provider": {
          "description": "The name of the provider the account is defined for",
          "type": "string"
        }
      },
      "required": [
        "AccountId",
        "Provider",
        "ProviderId"
      ]
    },
    "create_schema": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Schema": {
          "description": "The schema to generate",
          "type": "string"
        }
      },
      "required": [
        "Schema"
      ]
    },
    "rename_file": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "currentFileName": {
          "type": "string"
        },
        "newFileName": {
          "type": "string"
        }
      },
      "required": [
        "currentFileName",
        "newFileName"
      ]
    },
    "run_bash_script": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "scriptFileName": {
          "description": "The name of the script to run",
          "type": "string"
        },
        "source": {
          "default": true,
          "description": "Source the script when executing it as part of the executor process",
          "type": "boolean"
        }
      },
      "required": [
        "scriptFileName"
      ]
    },
    "install_plugin": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Required": {
          "default": false,
          "description": "Ensure the plugin loads at all times",
          "type": "boolean"
        },
        "Source:git": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "Path": {
              "description": "a path within in the repository where the plugin starts",
              "type": "string"
            },
            "Ref": {
              "default": "main",
              "description": "The ref to clone from the repo",
              "type": "string"
            },
            "Url": {
              "description": "The Url for the git repository",
              "type": "string"
            }
          }
        },
        "Priority": {
          "default": 100,
          "description": "The priority order to load plugins - lowest first",
          "type": "number"
        },
        "Enabled": {
          "default": true,
          "description": "To enable loading the plugin",
          "type": "boolean"
        },
        "Source": {
          "description": "Where the plugin for the plugin can be found",
          "type": "string",
          "enum": [
            "local",
            "git"
          ]
        },
        "Name": {
          "description": "The id of the plugin to install",
          "type": "string"
        }
      },
      "required": [
        "Name",
        "Source"
      ]
    },
    "conditional_stage_skip": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Condition": {
          "description": "How to test the value",
          "type": "string",
          "enum": [
            "Equals",
            "StartsWith",
            "EndsWith",
            "Contains"
          ]
        },
        "Test": {
          "description": "The value compared to",
          "type": "string"
        },
        "Value": {
          "description": "The value to test the match on",
          "type": "string"
        }
      },
      "required": [
        "Test",
        "Condition",
        "Value"
      ]
    },
    "start_ssh_shell": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "SSHKey": {
          "description": "The path or content of an ssh private key to use for authentication",
          "type": "string"
        },
        "Shell": {
          "default": "/bin/bash",
          "description": "The command to execute to start the shell",
          "type": "string"
        },
        "Username": {
          "description": "The username on the remote host",
          "type": "string"
        },
        "Port": {
          "default": 22,
          "description": "The port number the host is listening on for ssh connections",
          "type": "number"
        },
        "Host": {
          "description": "The IP or Hostname of the remote host",
          "type": "string"
        },
        "Password": {
          "description": "The password for the username on the remote host",
          "type": "string"
        }
      },
      "required": [
        "Host",
        "Username"
      ]
    },
    "manage_deployment": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "CurrentState": {
          "description": "The current state of the deployment",
          "type": "string",
          "enum": [
            "notdeployed",
            "deployed",
            "orphaned"
          ]
        },
        "DeploymentProvider": {
          "type": "string"
        },
        "DeploymentUnit": {
          "type": "string"
        },
        "District": {
          "type": "string"
        },
        "Operations": {
          "type": [
            "array",
            "string"
          ]
        },
        "DeploymentGroup": {
          "type": "string"
        }
      },
      "required": [
        "DeploymentUnit",
        "DeploymentGroup",
        "District",
        "Operations",
        "DeploymentProvider",
        "CurrentState"
      ]
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/Task-schema.json"
}
