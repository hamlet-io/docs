{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "ec2": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Ports": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "LB": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "LinkName": {
                          "default": "lb",
                          "type": "string"
                        },
                        "Tier": {
                          "type": "string"
                        },
                        "Instance": {
                          "type": "string"
                        },
                        "Version": {
                          "type": "string"
                        },
                        "PortMapping": {
                          "type": "string"
                        },
                        "Component": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Tier",
                        "Component"
                      ]
                    },
                    "IPAddressGroups": {
                      "contains": {
                        "type": "string"
                      },
                      "type": "array"
                    }
                  }
                }
              },
              "type": "object"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "FixedIP": {
              "default": false,
              "type": "boolean"
            },
            "Role": {
              "description": "Server configuration role",
              "type": "string"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "DockerHost": {
              "default": false,
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Processor": {
                  "default": "default",
                  "type": "string"
                },
                "Storage": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Permissions": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Decrypt": {
                  "default": false,
                  "type": "boolean"
                },
                "AppData": {
                  "default": false,
                  "type": "boolean"
                },
                "AppPublic": {
                  "default": false,
                  "type": "boolean"
                },
                "AsFile": {
                  "default": false,
                  "type": "boolean"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "ComputeInstance": {
              "description": "Configuration of compute instances used in the component",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "OperatingSystem": {
                  "description": "The operating system details of the compute instance",
                  "additionalProperties": false,
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-aws_operatingsystem-schema.json"
                },
                "OSPatching": {
                  "description": "Configuration for scheduled OS Patching",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-ospatching-schema.json"
                },
                "ComputeTasks": {
                  "description": "Customisation to setup the compute instance from its image",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "UserTasksRequired": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "A list of compute task types which must be accounted for in extensions on top of the component tasks",
                      "type": "array"
                    },
                    "Extensions": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "_computetask_awslinux_cfninit",
                        "_computetask_linux_hamletenv",
                        "_computetask_linux_volumemount",
                        "_computetask_awslinux_ospatching",
                        "_computetask_linux_filedir",
                        "_computetask_linux_sshkeys",
                        "_computetask_awscli",
                        "_computetask_awslinux_cwlog",
                        "_computetask_awslinux_efsmount",
                        "_computetask_linux_userbootstrap",
                        "_computetask_awslinux_vpc_lb"
                      ],
                      "description": "A list of extensions to source boostrap tasks from",
                      "type": "array"
                    }
                  }
                },
                "Image": {
                  "description": "Configures the source of the virtual machine image used for the instance",
                  "additionalProperties": false,
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-aws_computeimage-schema.json"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-ec2-schema.json"
}
