{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "userpool": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "Schema": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Mutable": {
                      "default": true,
                      "type": "boolean"
                    },
                    "Constraints": {
                      "description": "Constraints applied to the attribute based on their type",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Number": {
                          "description": "Number based Constraints",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "MinValue": {
                              "description": "The minimumn value of the attribute",
                              "type": "number"
                            },
                            "MaxValue": {
                              "description": "The maximum value of the attribute",
                              "type": "number"
                            }
                          }
                        },
                        "String": {
                          "description": "String based Constraints",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "MinLength": {
                              "default": 0,
                              "description": "The minimumn length of the attribute 0 = any",
                              "type": "number"
                            },
                            "MaxLength": {
                              "default": 0,
                              "description": "The maximum length of the attribute 0 = any",
                              "type": "number"
                            }
                          }
                        }
                      }
                    },
                    "Required": {
                      "default": true,
                      "type": "boolean"
                    },
                    "DataType": {
                      "default": "String",
                      "type": "string",
                      "enum": [
                        "String",
                        "Number",
                        "DateTime",
                        "Boolean"
                      ]
                    }
                  }
                }
              },
              "type": "object"
            },
            "MFA": {
              "default": false,
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "string"
                }
              ],
              "enum": [
                "true",
                true,
                "false",
                false,
                "optional"
              ]
            },
            "HostedUI": {
              "description": "Provision a managed endpoint for login and oauth endpoints",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Certificate": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Wildcard": {
                      "type": "boolean"
                    },
                    "IncludeInHost": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Tier": {
                          "type": "boolean"
                        },
                        "Instance": {
                          "type": "boolean"
                        },
                        "Version": {
                          "type": "boolean"
                        },
                        "Product": {
                          "type": "boolean"
                        },
                        "Environment": {
                          "type": "boolean"
                        },
                        "Host": {
                          "type": "boolean"
                        },
                        "Component": {
                          "type": "boolean"
                        },
                        "Segment": {
                          "type": "boolean"
                        }
                      }
                    },
                    "External": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "string"
                    },
                    "Domain": {
                      "description": "Explicit domain id which will override the product domain",
                      "type": "string"
                    },
                    "IncludeInDomain": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Product": {
                          "type": "boolean"
                        },
                        "Environment": {
                          "type": "boolean"
                        },
                        "Segment": {
                          "type": "boolean"
                        }
                      }
                    },
                    "HostParts": {
                      "contains": {
                        "type": "string"
                      },
                      "type": "array"
                    }
                  }
                }
              }
            },
            "Security": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ActivityTracking": {
                  "default": "disabled",
                  "description": "Apply authentication validation based on activity",
                  "type": "string",
                  "enum": [
                    "disabled",
                    "audit",
                    "enforced"
                  ]
                },
                "UserDeviceTracking": {
                  "default": "optional",
                  "anyOf": [
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "string"
                    }
                  ],
                  "enum": [
                    "true",
                    true,
                    "false",
                    false,
                    "optional"
                  ]
                }
              }
            },
            "LoginAliases": {
              "contains": {
                "type": "string"
              },
              "description": "Deprecated - use Username.Aliases",
              "type": "array"
            },
            "VerifyEmail": {
              "default": true,
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "PasswordPolicy": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Numbers": {
                  "default": true,
                  "type": "boolean"
                },
                "SpecialCharacters": {
                  "default": true,
                  "type": "boolean"
                },
                "MinimumLength": {
                  "default": 10,
                  "type": "number"
                },
                "Lowercase": {
                  "default": true,
                  "type": "boolean"
                },
                "Uppercase": {
                  "default": true,
                  "type": "boolean"
                },
                "AllowUserRecovery": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "VerificationEmailType": {
              "default": "code",
              "description": "The default verification email option for message customization.",
              "type": "string",
              "enum": [
                "code",
                "link"
              ]
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "VerifyPhone": {
              "default": false,
              "type": "boolean"
            },
            "AuthorizationHeader": {
              "default": "Authorization",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "DefaultClient": {
              "default": true,
              "description": "Enable default client mode which creates app client for the user pool and aligns with legacy config",
              "type": "boolean"
            },
            "MFAMethods": {
              "contains": {
                "type": "string"
              },
              "default": [
                "SMS"
              ],
              "type": "array",
              "enum": [
                "SMS",
                "SoftwareToken"
              ]
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Username": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Attributes": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array",
                  "enum": [
                    "email",
                    "phone_number"
                  ]
                },
                "CaseSensitive": {
                  "default": true,
                  "type": "boolean"
                },
                "Aliases": {
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email"
                  ],
                  "type": "array",
                  "enum": [
                    "phone_number",
                    "email",
                    "preferred_username"
                  ]
                }
              }
            },
            "AdminCreatesUser": {
              "default": true,
              "type": "boolean"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "UnusedAccountTimeout": {
              "default": 1,
              "type": "number"
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpool-schema.json"
}
