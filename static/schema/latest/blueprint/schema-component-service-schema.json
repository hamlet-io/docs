{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "service": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "ScalingPolicies": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Scheduled": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Schedule": {
                          "type": "string"
                        },
                        "ProcessorProfile": {
                          "default": "default",
                          "type": "string"
                        }
                      }
                    },
                    "Type": {
                      "default": "Stepped",
                      "type": "string",
                      "enum": [
                        "Stepped",
                        "Tracked",
                        "Scheduled"
                      ]
                    },
                    "Tracked": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "TargetValue": {
                          "type": "number"
                        },
                        "ScaleInEnabled": {
                          "default": true,
                          "type": "boolean"
                        },
                        "RecommendedMetric": {
                          "description": "Use a recommended (predefined) metric for scaling",
                          "type": "string"
                        }
                      }
                    },
                    "TrackingResource": {
                      "description": "The resource metric used to trigger scaling",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Link": {
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                        },
                        "MetricTrigger": {
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
                        }
                      }
                    },
                    "Cooldown": {
                      "description": "Cooldown time ( seconds ) after a scaling event has occurred before another event can be triggered",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "ScaleIn": {
                          "default": 300,
                          "type": "number"
                        },
                        "ScaleOut": {
                          "default": 600,
                          "type": "number"
                        }
                      }
                    },
                    "Stepped": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "CapacityAdjustment": {
                          "default": "Change",
                          "description": "How to scale when the policy is triggered",
                          "type": "string",
                          "enum": [
                            "Change",
                            "Exact",
                            "Percentage"
                          ]
                        },
                        "MetricAggregation": {
                          "default": "Average",
                          "description": "The method used to agregate the cloudwatch metric",
                          "type": "string",
                          "enum": [
                            "Average",
                            "Minimum",
                            "Maximum"
                          ]
                        },
                        "Adjustments": {
                          "patternProperties": {
                            "^[A-Za-z_][A-Za-z0-9_]*$": {
                              "additionalProperties": false,
                              "properties": {
                                "LowerBound": {
                                  "description": "The lower bound for the difference between the alarm threshold and the metric",
                                  "type": "number"
                                },
                                "AdjustmentValue": {
                                  "default": 1,
                                  "description": "The value to apply when the adjustment step is triggered",
                                  "type": "number"
                                },
                                "UpperBound": {
                                  "description": "The upper bound for the difference between the alarm threshold and the metric",
                                  "type": "number"
                                }
                              }
                            }
                          },
                          "description": "The adjustments to apply at each step",
                          "type": "object"
                        },
                        "MinAdjustment": {
                          "default": -1,
                          "description": "When minimum scale adjustment value to apply when triggered",
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              },
              "type": "object"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "application",
              "type": "string"
            },
            "aws:FargatePlatform": {
              "default": "LATEST",
              "description": "The version of the fargate platform to use",
              "type": "string"
            },
            "ContainerNetworkLinks": {
              "default": false,
              "type": "boolean"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Containers": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-containertask-schema.json"
            },
            "DesiredCount": {
              "type": "number"
            },
            "NetworkMode": {
              "type": "string",
              "enum": [
                "none",
                "bridge",
                "host",
                "awsvpc",
                "aws:awsvpc"
              ]
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Placement": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "DistinctInstance": {
                  "default": true,
                  "description": "Each task is running on a different container instance when true",
                  "type": "boolean"
                },
                "Strategy": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "How to place containers on the cluster",
                  "type": "array",
                  "enum": [
                    "spread-multiAZ",
                    "spread-instance",
                    "binpack-cpu",
                    "binpack-memory",
                    "daemon",
                    "random"
                  ]
                },
                "ComputeProvider": {
                  "description": "The compute provider placement policy",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Additional": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "Weight": {
                              "default": 1,
                              "description": "The ratio of containers allocated to the provider based on the configured providers",
                              "type": "number"
                            },
                            "Provider": {
                              "type": "string",
                              "enum": [
                                "_engine",
                                "aws:fargate",
                                "aws:fargate_spot"
                              ]
                            }
                          },
                          "required": [
                            "Provider"
                          ]
                        }
                      },
                      "description": "Providers who will meet the additional compute capacity outside of the default",
                      "type": "object"
                    },
                    "Default": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "RequiredCount": {
                          "default": 1,
                          "description": "The minimum count of containers to run on the default provider",
                          "type": "number"
                        },
                        "Weight": {
                          "default": 1,
                          "description": "The ratio of containers allocated to the provider based on the configured providers",
                          "type": "number"
                        },
                        "Provider": {
                          "default": "_engine",
                          "description": "The default container compute provider - _engine uses the default provider of the engine",
                          "type": "string",
                          "enum": [
                            "_engine",
                            "aws:fargate",
                            "aws:fargate_spot"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            },
            "UseTaskRole": {
              "default": true,
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Processor": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Permissions": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Decrypt": {
                  "default": true,
                  "type": "boolean"
                },
                "AppData": {
                  "default": true,
                  "type": "boolean"
                },
                "AppPublic": {
                  "default": true,
                  "type": "boolean"
                },
                "AsFile": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "TaskLogGroup": {
              "default": true,
              "type": "boolean"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "LogMetrics": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "LogFilter"
                  ]
                }
              },
              "type": "object"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "Engine": {
              "default": "ec2",
              "description": "The engine used to run the container",
              "type": "string",
              "enum": [
                "ec2",
                "fargate",
                "aws:fargate"
              ]
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-service-schema.json"
}
