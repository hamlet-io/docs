{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "firewallrule": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Active": {
              "default": true,
              "type": "boolean"
            },
            "Action": {
              "description": "The action to perform on a match of this rule",
              "type": "object",
              "enum": [
                "pass",
                "drop",
                "inspect",
                "alert",
                "monitor"
              ]
            },
            "Type": {
              "default": "NetworkTuple",
              "description": "The type of rule to be applied",
              "type": "string",
              "enum": [
                "NetworkTuple",
                "HostFilter",
                "Complex"
              ]
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Priority": {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ],
              "description": "The priority of the rule - lowest number wins or use default as last rule"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Inspection": {
              "default": "Stateful",
              "description": "How to inspect network flows through the firewall",
              "type": "string",
              "enum": [
                "Stateful",
                "Stateless"
              ]
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "HostFilter": {
              "description": "Filter traffic based on Host requested",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Hosts": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "A collection of hosts to include use *. for wilcard domains",
                  "type": "array"
                },
                "Protocols": {
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "http",
                    "tls_sni"
                  ],
                  "description": "The protocols to inspect host names for",
                  "type": "array",
                  "enum": [
                    "http",
                    "tls_sni",
                    "dns"
                  ]
                },
                "LinkEndpoints": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "Attribute": {
                          "default": "FQDN",
                          "description": "The link Attribute to get the host from",
                          "type": "string"
                        },
                        "Link": {
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                        }
                      }
                    }
                  },
                  "description": "Links to components for Host endpoints",
                  "type": "object"
                }
              }
            },
            "NetworkTuple": {
              "description": "Rule configuration for the networkTuple rule type",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Destination": {
                  "description": "The details of the network traffic destinations",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Port": {
                      "description": "The name of the Port reference",
                      "type": "string"
                    },
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    },
                    "IPAddressGroups": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "The IP address group names for the source",
                      "type": "array"
                    }
                  }
                },
                "Source": {
                  "description": "The details of the network traffic source",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Port": {
                      "default": "any",
                      "description": "The name of the Port reference",
                      "type": "string"
                    },
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    },
                    "IPAddressGroups": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "_global"
                      ],
                      "description": "The IP address group names for the source",
                      "type": "array"
                    }
                  }
                }
              }
            },
            "Complex": {
              "description": "Complex rule matching and processing",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Links": {
                  "description": "Links to be used as part of the extension",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                },
                "Ports": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "A collection of ports to use during complex processing",
                  "type": "array"
                },
                "IPAddressGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "A collection of IP AddressGroups to use during complex processing",
                  "type": "array"
                },
                "Extensions": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "A list of extensions to use for rule generation",
                  "type": "array"
                }
              }
            }
          },
          "required": [
            "Priority"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-firewallrule-schema.json"
}
