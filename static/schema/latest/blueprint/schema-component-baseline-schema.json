{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "baseline": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "azure:Lifecycle": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "BlobRetentionDays": {
                  "type": "number"
                },
                "BlobAutoSnapshots": {
                  "default": false,
                  "type": "boolean"
                }
              }
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "segment",
              "type": "string",
              "enum": [
                "segment"
              ]
            },
            "deployment:Priority": {
              "default": 1,
              "type": "number",
              "enum": [
                1
              ]
            },
            "azure:Certificate": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Wildcard": {
                  "type": "boolean"
                },
                "IncludeInHost": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Tier": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Host": {
                  "type": "string"
                },
                "Domain": {
                  "description": "Explicit domain id which will override the product domain",
                  "type": "string"
                },
                "IncludeInDomain": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "HostParts": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            },
            "azure:Access": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "DirectoryService": {
                  "description": "The directory service that is used for authentication. 'None' or 'AADDS'.",
                  "type": "string"
                }
              }
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "DataBuckets": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baselinedata-schema.json"
            },
            "Active": {
              "default": false,
              "type": "boolean"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "default": "baseline",
              "type": "string",
              "enum": [
                "baseline"
              ]
            },
            "Seed": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Length": {
                  "default": 10,
                  "type": "number"
                }
              }
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "azure:Storage": {
                  "default": "default",
                  "description": "Controls the storage configuration for the baseline storage account",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "azure:AdministratorGroups": {
              "contains": {
                "type": "string"
              },
              "default": [
                "9b895d92-2cd3-44c7-9d02-a6ac2d5ea5c3"
              ],
              "description": "The set of administrator groups controlling access to keyvault",
              "type": "array"
            },
            "Keys": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baselinekey-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baseline-schema.json"
}
