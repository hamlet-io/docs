{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "lb": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "IdleTimeout": {
              "default": 60,
              "description": "How long connections can remain idle before they are dropped",
              "type": "number"
            },
            "Logs": {
              "default": false,
              "description": "Enable request logging for requests",
              "type": "boolean"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Security": {
                  "default": "default",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "HealthCheckPort": {
              "description": "For classic engine the port to run health checks from",
              "type": "string"
            },
            "Alerts": {
              "description": "Alerting rules based on metrics generated by the lb",
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "WAF": {
              "description": "Web Application Firewall Integration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Logging": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": true,
                      "type": "boolean"
                    }
                  }
                },
                "RateLimits": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "IPAddressGroups": {
                          "contains": {
                            "type": "string"
                          },
                          "type": "array"
                        },
                        "Limit": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "Limit"
                      ]
                    }
                  },
                  "type": "object"
                },
                "OWASP": {
                  "default": false,
                  "type": "boolean"
                },
                "Profiles": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Logging": {
                      "default": "waf",
                      "description": "Logging profile to process WAF Logs that are stored in the OpsData DataBucket.",
                      "type": "string"
                    }
                  }
                },
                "CountryGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "IPAddressGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            },
            "Engine": {
              "default": "application",
              "description": "The type of load balancer - application: http based traffic - network: tcp/udp traffic",
              "type": "string",
              "enum": [
                "application",
                "network",
                "classic"
              ]
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-lb-schema.json"
}
