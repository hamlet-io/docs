{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "db": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "EngineMinorVersion": {
              "type": "string"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "Encrypted": {
              "default": false,
              "type": "boolean"
            },
            "Size": {
              "default": 20,
              "type": "number"
            },
            "Port": {
              "type": "string"
            },
            "Backup": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "DeletionPolicy": {
                  "default": "Snapshot",
                  "type": "string",
                  "enum": [
                    "Snapshot",
                    "Delete",
                    "Retain"
                  ]
                },
                "DeleteAutoBackups": {
                  "default": true,
                  "description": "Delete automated snapshots when the instance is deleted",
                  "type": "boolean"
                },
                "UpdateReplacePolicy": {
                  "default": "Snapshot",
                  "type": "string",
                  "enum": [
                    "Snapshot",
                    "Delete",
                    "Retain"
                  ]
                },
                "RetentionPeriod": {
                  "default": 35,
                  "type": "number"
                },
                "SnapshotOnDeploy": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "DBParameters": {
              "type": "object"
            },
            "GenerateCredentials": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "EncryptionScheme": {
                  "description": "A prefix appended to link attributes to show encryption status",
                  "type": "string"
                },
                "CharacterLength": {
                  "default": 20,
                  "type": "number"
                },
                "Enabled": {
                  "default": false,
                  "type": "boolean"
                },
                "MasterUserName": {
                  "default": "root",
                  "type": "string"
                }
              }
            },
            "azure:SecretSettings": {
              "description": "Configuration for Secrets that are defined in Settings.",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Prefix": {
                  "description": "Settings with this prefix and ending in _SECRET will be considered a Secret.",
                  "type": "string"
                }
              }
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ],
              "type": "array"
            },
            "azure:Secrets": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Setting": {
                      "description": "The desired setting label/key for this Secret's value i.e DB_CONNECTION_STRING.",
                      "type": "string"
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "type": "object"
            },
            "AlwaysCreateFromSnapshot": {
              "default": false,
              "description": "Always create the database from a snapshot",
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Processor": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Security": {
                  "default": "default",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Engine": {
              "type": "string"
            },
            "Monitoring": {
              "description": "Monitoring configuration options",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "QueryPerformance": {
                  "description": "Enable monitoring database query performance",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": false,
                      "type": "boolean"
                    },
                    "RetentionPeriod": {
                      "default": 7,
                      "description": "How long to keep data for ( days )",
                      "type": "number",
                      "enum": [
                        7,
                        731
                      ]
                    }
                  }
                },
                "DetailedMetrics": {
                  "description": "Enables detailed metric collection from the database host",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "CollectionInterval": {
                      "default": 60,
                      "description": "Metric Collection interval ( seconds )",
                      "type": "number",
                      "enum": [
                        0,
                        1,
                        5,
                        10,
                        15,
                        30,
                        60
                      ]
                    },
                    "Enabled": {
                      "default": false,
                      "type": "boolean"
                    }
                  }
                }
              }
            },
            "azure:AutoGrow": {
              "default": "Disabled",
              "description": "Allow Database storage to grow automatically as the capacity limit is reached.",
              "type": "string",
              "enum": [
                "Enabled",
                "Disabled"
              ]
            },
            "Hibernate": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Enabled": {
                  "default": false,
                  "type": "boolean"
                },
                "StartUpMode": {
                  "default": "restore",
                  "type": "string",
                  "enum": [
                    "restore",
                    "replace"
                  ]
                }
              }
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "EngineVersion": {
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "DatabaseName": {
              "type": "string"
            },
            "Cluster": {
              "description": "Cluster specific configuration when using a clustered database engine",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ScalingPolicies": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "Scheduled": {
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "Schedule": {
                              "type": "string"
                            },
                            "ProcessorProfile": {
                              "default": "default",
                              "type": "string"
                            }
                          }
                        },
                        "Type": {
                          "default": "Stepped",
                          "type": "string",
                          "enum": [
                            "Stepped",
                            "Tracked",
                            "Scheduled"
                          ]
                        },
                        "Tracked": {
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "TargetValue": {
                              "type": "number"
                            },
                            "ScaleInEnabled": {
                              "default": true,
                              "type": "boolean"
                            },
                            "RecommendedMetric": {
                              "description": "Use a recommended (predefined) metric for scaling",
                              "type": "string"
                            }
                          }
                        },
                        "TrackingResource": {
                          "description": "The resource metric used to trigger scaling",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "Link": {
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                            },
                            "MetricTrigger": {
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
                            }
                          }
                        },
                        "Cooldown": {
                          "description": "Cooldown time ( seconds ) after a scaling event has occurred before another event can be triggered",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "ScaleIn": {
                              "default": 300,
                              "type": "number"
                            },
                            "ScaleOut": {
                              "default": 600,
                              "type": "number"
                            }
                          }
                        },
                        "Stepped": {
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "CapacityAdjustment": {
                              "default": "Change",
                              "description": "How to scale when the policy is triggered",
                              "type": "string",
                              "enum": [
                                "Change",
                                "Exact",
                                "Percentage"
                              ]
                            },
                            "MetricAggregation": {
                              "default": "Average",
                              "description": "The method used to agregate the cloudwatch metric",
                              "type": "string",
                              "enum": [
                                "Average",
                                "Minimum",
                                "Maximum"
                              ]
                            },
                            "Adjustments": {
                              "patternProperties": {
                                "^[A-Za-z_][A-Za-z0-9_]*$": {
                                  "additionalProperties": false,
                                  "properties": {
                                    "LowerBound": {
                                      "description": "The lower bound for the difference between the alarm threshold and the metric",
                                      "type": "number"
                                    },
                                    "AdjustmentValue": {
                                      "default": 1,
                                      "description": "The value to apply when the adjustment step is triggered",
                                      "type": "number"
                                    },
                                    "UpperBound": {
                                      "description": "The upper bound for the difference between the alarm threshold and the metric",
                                      "type": "number"
                                    }
                                  }
                                }
                              },
                              "description": "The adjustments to apply at each step",
                              "type": "object"
                            },
                            "MinAdjustment": {
                              "default": -1,
                              "description": "When minimum scale adjustment value to apply when triggered",
                              "type": "number"
                            }
                          }
                        }
                      }
                    }
                  },
                  "type": "object"
                },
                "Parameters": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "Value": {
                          "anyOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "number"
                            },
                            {
                              "type": "boolean"
                            }
                          ]
                        },
                        "Name": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Name",
                        "Value"
                      ]
                    }
                  },
                  "description": "Cluster level database parameters",
                  "type": "object"
                }
              }
            },
            "AutoMinorVersionUpgrade": {
              "type": "boolean"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "AllowMajorVersionUpgrade": {
              "default": true,
              "description": "If the EngineVersion paramter is updated allow for major version updates to run",
              "type": "boolean"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "MaintenanceWindow": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-maintenancewindow-schema.json"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            }
          },
          "required": [
            "Engine",
            "EngineVersion"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-db-schema.json"
}
