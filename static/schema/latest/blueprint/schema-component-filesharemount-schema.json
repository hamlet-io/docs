{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "filesharemount": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Ownership": {
              "description": "Defines the ownerships of files created under this directory",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "UID": {
                  "description": "The UID which owns the files",
                  "type": "number"
                },
                "SecondaryGIDS": {
                  "contains": {
                    "type": "number"
                  },
                  "description": "Secondary GIDS to apply to file ownership",
                  "type": "array"
                },
                "GID": {
                  "description": "The GID which owns the files",
                  "type": "number"
                },
                "Permissions": {
                  "default": 755,
                  "description": "The unix file permissions ( in number format) to apply",
                  "type": "number"
                },
                "Enforced": {
                  "default": false,
                  "description": "Enforce these ownership details on all files",
                  "type": "boolean"
                }
              }
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "chroot": {
              "default": false,
              "description": "Set this directory as the root for clients who connect to it",
              "type": "boolean"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Directory": {
              "type": "string"
            }
          },
          "required": [
            "Directory"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-filesharemount-schema.json"
}
