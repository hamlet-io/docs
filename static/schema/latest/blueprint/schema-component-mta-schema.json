{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "mta": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "description": "Allowed IP addresses. If any group is provided, all unmatching traffic will be blocked",
              "type": "array"
            },
            "Direction": {
              "default": "send",
              "type": "string",
              "enum": [
                "send",
                "receive"
              ]
            },
            "Rules": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-mtarule-schema.json"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Certificate": {
              "description": "Configure the domain(s) associated with this MTA",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Wildcard": {
                  "type": "boolean"
                },
                "IncludeInHost": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Tier": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Host": {
                  "type": "string"
                },
                "Domain": {
                  "description": "Explicit domain id which will override the product domain",
                  "type": "string"
                },
                "IncludeInDomain": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "HostParts": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            }
          },
          "required": [
            "Direction",
            "Direction",
            "Direction",
            "Direction"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-mta-schema.json"
}
