{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "federatedroleassignment": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Type": {
              "description": "How the assignment should be applied",
              "type": "string",
              "enum": [
                "Authenticated",
                "Unauthenticated",
                "Rule"
              ]
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Permissions": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Decrypt": {
                  "default": false,
                  "type": "boolean"
                },
                "AppData": {
                  "default": false,
                  "type": "boolean"
                },
                "AppPublic": {
                  "default": false,
                  "type": "boolean"
                },
                "AsFile": {
                  "default": false,
                  "type": "boolean"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Rule": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "MatchType": {
                  "description": "How to match the claim value",
                  "type": "string",
                  "enum": [
                    "Equals",
                    "Contains",
                    "StartsWith",
                    "NotEqual"
                  ]
                },
                "Priority": {
                  "default": 100,
                  "description": "The order the rule should be evalutated in. lowest wins",
                  "type": "number"
                },
                "Value": {
                  "description": "The value of the claim to match on",
                  "type": "string"
                },
                "Providers": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The link ids of the providers the assignment applies to",
                  "type": "array"
                },
                "Claim": {
                  "description": "The user claim to evalutate",
                  "type": "string"
                }
              }
            }
          },
          "required": [
            "Type"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-federatedroleassignment-schema.json"
}
