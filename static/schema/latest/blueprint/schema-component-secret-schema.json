{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "secret": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Generated": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "SecretKey": {
                  "default": "password",
                  "description": "The key in the JSON secret to set the generated secret to",
                  "type": "string"
                },
                "Content": {
                  "default": {
                    "username": "admin"
                  },
                  "description": "A JSON object which contains the nonsensitve parts of the secret",
                  "type": "object"
                }
              }
            },
            "Lifecycle": {
              "description": "The lifecycle for a given Secret.",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Rotation": {
                  "description": "The Secret rotation schedule, in number of days - accepts rate() or cron() formats.",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": false,
                      "description": "Enable Secret rotation.",
                      "type": "boolean"
                    }
                  }
                }
              }
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Source": {
              "default": "user",
              "type": "string",
              "enum": [
                "user",
                "generated"
              ]
            },
            "Requirements": {
              "description": "Format requirements for the Secret",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ExcludedCharacters": {
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "\"",
                    "'",
                    "$",
                    "@",
                    "/",
                    "\\"
                  ],
                  "description": "Characters that must be excluded",
                  "type": "array"
                },
                "RequireAllIncludedTypes": {
                  "default": true,
                  "description": "Require at least one of each included type",
                  "type": "boolean"
                },
                "MinLength": {
                  "default": 20,
                  "description": "The minimum character length",
                  "type": "number"
                },
                "MaxLength": {
                  "default": 30,
                  "description": "The maximum character length",
                  "type": "number"
                },
                "IncludeUpper": {
                  "default": true,
                  "description": "Include upper-case characters",
                  "type": "boolean"
                },
                "IncludeLower": {
                  "default": true,
                  "description": "Include lower-case characters",
                  "type": "boolean"
                },
                "IncludeSpecial": {
                  "default": false,
                  "description": "Include special characters",
                  "type": "boolean"
                },
                "IncludeNumber": {
                  "default": true,
                  "description": "Include numbers characters",
                  "type": "boolean"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-secret-schema.json"
}
