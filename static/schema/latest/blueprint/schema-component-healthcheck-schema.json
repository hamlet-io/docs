{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "healthcheck": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "application",
              "type": "string"
            },
            "Engine:Simple": {
              "description": "Simple healthcheck configuration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Destination": {
                  "description": "The desitination to perform the healthcheck on",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "LinkAttribute": {
                      "default": "FQDN",
                      "description": "The attribute of the linked occurrence to use for the address",
                      "type": "object"
                    },
                    "Address": {
                      "description": "An explicit address to monitor",
                      "type": "object"
                    },
                    "AddressType": {
                      "default": "Hostname",
                      "description": "The type of address to monitor",
                      "type": "object",
                      "enum": [
                        "Hostname",
                        "IP"
                      ]
                    },
                    "Link": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                },
                "HTTPSearchString": {
                  "description": "When using HTTP checks a string that must be present in the response body",
                  "type": "object"
                },
                "Port": {
                  "description": "The name of a port which sets the healthcheck protocol details",
                  "type": "object"
                },
                "HTTPSearchSetting": {
                  "description": "The name of a setting that contains the HTTP Search string to use",
                  "type": "object"
                }
              }
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Regions": {
              "contains": {
                "type": "string"
              },
              "default": [
                "_all"
              ],
              "description": "A list of regions to run the health check from - _product: is the product region - _all: is all available regions",
              "type": "array"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "NetworkAccess": {
              "default": false,
              "description": "Run the healthcheck within the private network",
              "type": "boolean"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Engine:Complex": {
              "description": "Complex specific configuration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "RunTime": {
                  "description": "The runtime to use for the script execution",
                  "type": "string"
                },
                "Memory": {
                  "default": 1024,
                  "description": "The memory to allocate to the script execution",
                  "type": "number"
                },
                "Schedule": {
                  "default": "rate(5 minutes)",
                  "description": "The schedule to run the healthcheck",
                  "type": "object"
                },
                "Handler": {
                  "type": "string"
                },
                "Tracing": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Mode": {
                      "type": "string",
                      "enum": [
                        "active",
                        "passthrough"
                      ]
                    }
                  }
                },
                "Image": {
                  "description": "Control the source of the image for the healthcheck script",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "ScriptFileName": {
                      "default": "healthcheck.py",
                      "description": "The name of the healthcheck script if the image is a zip",
                      "type": "string"
                    },
                    "Source:url": {
                      "description": "Url Source specific Configuration",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "ImageHash": {
                          "description": "The expected sha1 hash of the Url if empty any will be accepted",
                          "type": "string"
                        },
                        "Url": {
                          "description": "The Url to the openapi file",
                          "type": "string"
                        }
                      }
                    },
                    "Source": {
                      "default": "registry",
                      "description": "The source of the image - registry: the local hamlet registry - url: an external public url - none: no source image",
                      "type": "string",
                      "enum": [
                        "registry",
                        "url",
                        "none"
                      ]
                    }
                  },
                  "required": [
                    "Source"
                  ]
                }
              },
              "required": [
                "Handler"
              ]
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Permissions": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Decrypt": {
                  "default": true,
                  "type": "boolean"
                },
                "AppData": {
                  "default": true,
                  "type": "boolean"
                },
                "AppPublic": {
                  "default": true,
                  "type": "boolean"
                },
                "AsFile": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "ReportRetention": {
              "description": "How long to keep status reports for in days",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Success": {
                  "default": 30,
                  "description": "Successful runs",
                  "type": "object"
                },
                "Failure": {
                  "default": 30,
                  "description": "Failed runs",
                  "type": "object"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "Engine": {
              "description": "The type of healthcheck to perform",
              "type": "object",
              "enum": [
                "Simple",
                "Complex"
              ]
            }
          },
          "required": [
            "Engine",
            "Engine",
            "Engine",
            "Engine"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-healthcheck-schema.json"
}
