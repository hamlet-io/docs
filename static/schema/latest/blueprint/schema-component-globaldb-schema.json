{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "globaldb": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "Table": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Capacity": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Read": {
                      "default": 1,
                      "description": "When using provisioned billing the maximum RCU of the table",
                      "type": "number"
                    },
                    "Write": {
                      "default": 1,
                      "description": "When using provisioned billing the maximum WCU of the table",
                      "type": "number"
                    }
                  }
                },
                "Encrypted": {
                  "default": true,
                  "description": "Enable at rest encryption",
                  "type": "boolean"
                },
                "Billing": {
                  "default": "provisioned",
                  "description": "The billing mode for the table",
                  "type": "string",
                  "enum": [
                    "provisioned",
                    "per-request"
                  ]
                },
                "Backup": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": false,
                      "description": "Enables point in time recovery on the table",
                      "type": "boolean"
                    }
                  }
                },
                "Stream": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": false,
                      "description": "Enables dynamodb event stream",
                      "type": "boolean"
                    },
                    "ViewType": {
                      "default": "NEW_IMAGE",
                      "type": "string",
                      "enum": [
                        "KEYS_ONLY",
                        "NEW_IMAGE",
                        "OLD_IMAGE",
                        "NEW_AND_OLD_IMAGES"
                      ]
                    }
                  }
                }
              }
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "PrimaryKey": {
              "description": "The primary key for the table",
              "type": "string"
            },
            "TTLKey": {
              "description": "A key in the table used to manage the items expiry",
              "type": "string"
            },
            "SecondaryIndexes": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Capacity": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Read": {
                          "default": 1,
                          "description": "When using provisioned billing the maximum RCU of the table",
                          "type": "number"
                        },
                        "Write": {
                          "default": 1,
                          "description": "When using provisioned billing the maximum WCU of the table",
                          "type": "number"
                        }
                      }
                    },
                    "Keys": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "List of keys",
                      "type": "array"
                    },
                    "KeyTypes": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "Type of each key - default is hash(0) then range",
                      "type": "array",
                      "enum": [
                        "hash",
                        "range"
                      ]
                    },
                    "Name": {
                      "description": "Index name",
                      "type": "string"
                    }
                  },
                  "required": [
                    "Keys"
                  ]
                }
              },
              "description": "Alternate indexes for query efficiency",
              "type": "object"
            },
            "SecondaryKey": {
              "description": "The secondary sort key for the table",
              "type": "string"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "KeyTypes": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Type": {
                      "description": "Key value type",
                      "type": "string",
                      "enum": [
                        "string",
                        "number",
                        "binary"
                      ]
                    }
                  }
                }
              },
              "description": "Key types - default is string",
              "type": "object"
            },
            "ChangeStream": {
              "description": "Provides a stream of changes made to the table",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ChangeView": {
                  "default": "KeysOnly",
                  "description": "The format of changes that will be provided in the stream",
                  "type": "string",
                  "enum": [
                    "KeysOnly",
                    "NewItem",
                    "OldItem",
                    "NewAndOldItem"
                  ]
                },
                "Enabled": {
                  "default": false,
                  "type": "object"
                }
              }
            }
          },
          "required": [
            "PrimaryKey",
            "PrimaryKey",
            "PrimaryKey",
            "PrimaryKey"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-globaldb-schema.json"
}
