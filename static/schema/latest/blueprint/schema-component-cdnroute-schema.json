{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "cdnroute": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Origin": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "BasePath": {
                  "description": "The base path at the origin destination",
                  "type": "string"
                },
                "Link": {
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                }
              },
              "required": [
                "Link"
              ]
            },
            "Compress": {
              "default": false,
              "type": "boolean"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "PathPattern": {
              "description": "The path based pattern to match for this route to apply",
              "type": "string"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "CachingTTL": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Maximum": {
                  "default": 31536000,
                  "type": "number"
                },
                "Minimum": {
                  "default": 0,
                  "type": "number"
                },
                "Default": {
                  "default": 600,
                  "type": "number"
                }
              }
            },
            "InvalidateOnUpdate": {
              "default": true,
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "RedirectAliases": {
              "description": "Redirect secondary domains to the primary domain name",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Enabled": {
                  "default": true,
                  "type": "boolean"
                },
                "RedirectVersion": {
                  "default": "v1",
                  "type": "string"
                }
              }
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "EventHandlers": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Function": {
                      "type": "string"
                    },
                    "Action": {
                      "type": "string",
                      "enum": [
                        "viewer-request",
                        "viewer-response",
                        "origin-request",
                        "origin-response"
                      ]
                    },
                    "Tier": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "Tier",
                    "Component",
                    "Function",
                    "Action"
                  ]
                }
              },
              "description": "Attach a function to a stage in the Cloudfront Processing",
              "type": "object"
            }
          },
          "required": [
            "PathPattern"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-cdnroute-schema.json"
}
