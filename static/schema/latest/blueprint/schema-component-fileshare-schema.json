{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "fileshare": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "aws:IAMRequired": {
              "default": false,
              "description": "Require IAM Access to EFS",
              "type": "boolean"
            },
            "Mounts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-filesharemount-schema.json"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "Encrypted": {
              "default": true,
              "type": "boolean"
            },
            "Size": {
              "description": "The size in Gb of the file share",
              "type": "number"
            },
            "Backup": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "RetentionPeriod": {
                  "default": 31,
                  "description": "The time in days to keep backups",
                  "type": "number"
                }
              }
            },
            "deployment:Priority": {
              "default": 50,
              "type": "number"
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ],
              "type": "array"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "MaintenanceWindow": {
              "description": "When to apply maintenance on the share",
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-maintenancewindow-schema.json"
            },
            "aws:ThroughputCapacity": {
              "default": 512,
              "description": "The throughput capacity in  megabytes/second for fileshares",
              "type": "number"
            },
            "Engine": {
              "default": "NFS",
              "description": "The type of file share that the component will offer",
              "type": "string",
              "enum": [
                "NFS",
                "SMB"
              ]
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-fileshare-schema.json"
}
