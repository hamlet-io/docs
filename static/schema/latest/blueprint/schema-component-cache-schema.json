{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "cache": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Hibernate": {
              "description": "Remove any services which charge by the hour",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Enabled": {
                  "default": false,
                  "type": "boolean"
                },
                "StartUpMode": {
                  "default": "replace",
                  "type": "string",
                  "enum": [
                    "replace"
                  ]
                }
              }
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "EngineVersion": {
              "description": "The version of the engine type",
              "type": "string"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "Port": {
              "description": "The network port the cache listens on - defaults to a port with the same name as the engine",
              "type": "string"
            },
            "Backup": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "RetentionPeriod": {
                  "type": "string"
                }
              }
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ],
              "description": "The source ip addresses that can access the cache",
              "type": "array"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Processor": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "MaintenanceWindow": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-maintenancewindow-schema.json"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "Engine": {
              "description": "The type of cache engine to use",
              "type": "string",
              "enum": [
                "memcached",
                "redis"
              ]
            }
          },
          "required": [
            "Engine",
            "EngineVersion",
            "Engine",
            "EngineVersion",
            "Engine",
            "EngineVersion",
            "Engine",
            "EngineVersion"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-cache-schema.json"
}
