{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "link": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "SubComponent": {
              "type": "object"
            },
            "IncludeInContext": {
              "description": "Include the attributes provided by this link in the environment context",
              "type": "object"
            },
            "Task": {
              "type": "object"
            },
            "Platform": {
              "type": "object"
            },
            "Instance": {
              "type": "object"
            },
            "Mount": {
              "type": "object"
            },
            "Product": {
              "type": "object"
            },
            "NetworkACL": {
              "type": "object"
            },
            "Direction": {
              "description": "The direction the role applies to between the components",
              "type": "object"
            },
            "Any": {
              "type": "object"
            },
            "Segment": {
              "type": "object"
            },
            "Assignment": {
              "type": "object"
            },
            "Function": {
              "type": "object"
            },
            "Tenant": {
              "type": "object"
            },
            "Endpoint": {
              "type": "object"
            },
            "Version": {
              "type": "object"
            },
            "Branch": {
              "type": "object"
            },
            "PortMapping": {
              "type": "object"
            },
            "Component": {
              "type": "object"
            },
            "Client": {
              "type": "object"
            },
            "RegistryService": {
              "type": "object"
            },
            "Route": {
              "type": "object"
            },
            "DataBucket": {
              "type": "object"
            },
            "Tier": {
              "type": "object"
            },
            "ActiveRequired": {
              "description": "Require that the linked occurrence has been deployed and is active",
              "type": "object"
            },
            "Connection": {
              "type": "object"
            },
            "Resource": {
              "type": "object"
            },
            "Enabled": {
              "default": true,
              "type": "object"
            },
            "Service": {
              "type": "object"
            },
            "AuthProvider": {
              "type": "object"
            },
            "Role": {
              "description": "The role of the relationship between the components",
              "type": "object"
            },
            "RouteTable": {
              "type": "object"
            },
            "Secret": {
              "type": "object"
            },
            "Type": {
              "type": "object"
            },
            "Environment": {
              "type": "object"
            },
            "Rule": {
              "type": "object"
            },
            "Key": {
              "type": "object"
            },
            "DataFeed": {
              "type": "object"
            }
          },
          "required": [
            "Tier",
            "Component"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
}
