{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "network": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Logging": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "FlowLogs": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "s3": {
                          "description": "s3 specific destination configuration",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "Prefix": {
                              "default": "FlowLogs/",
                              "description": "A prefix for the s3 bucket destination",
                              "type": "string"
                            },
                            "Link": {
                              "description": "A link to the s3 bucket destination",
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                            }
                          }
                        },
                        "Action": {
                          "description": "The action to capture in the flow log",
                          "type": "string",
                          "enum": [
                            "accept",
                            "reject",
                            "any"
                          ]
                        },
                        "DestinationType": {
                          "default": "s3",
                          "description": "The destination type to send the logs to",
                          "type": "string",
                          "enum": [
                            "log",
                            "s3"
                          ]
                        }
                      },
                      "required": [
                        "Action"
                      ]
                    }
                  },
                  "description": "Log flows across the network",
                  "type": "object"
                },
                "DNSQuery": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "s3": {
                          "description": "s3 specific destination configuration",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "Link": {
                              "description": "A link to the s3 bucket destination",
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                            }
                          }
                        },
                        "datafeed": {
                          "description": "datafeed specific destination configuration",
                          "additionalProperties": false,
                          "type": "object",
                          "properties": {
                            "Link": {
                              "description": "A link to the datafeed destination",
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                            }
                          }
                        },
                        "DestinationType": {
                          "default": "s3",
                          "description": "The destination type to send the logs to",
                          "type": "string",
                          "enum": [
                            "log",
                            "s3",
                            "datafeed"
                          ]
                        }
                      }
                    }
                  },
                  "description": "Log DNS Queries made in the vpc",
                  "type": "object"
                }
              }
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "segment",
              "type": "string"
            },
            "NetworkACLs": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-networkacl-schema.json"
            },
            "Address": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "CIDR": {
                  "default": "10.0.0.0/16",
                  "type": "string"
                }
              }
            },
            "deployment:Priority": {
              "default": 20,
              "type": "number"
            },
            "DNS": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "UseProvider": {
                  "default": true,
                  "type": "boolean"
                },
                "GenerateHostNames": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Active": {
              "default": false,
              "type": "boolean"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "RouteTables": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-networkroute-schema.json"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-network-schema.json"
}
