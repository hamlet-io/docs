{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "datafeed": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Logging": {
              "default": true,
              "type": "boolean"
            },
            "Destination": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Link": {
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                }
              },
              "required": [
                "Link"
              ]
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "solution",
              "type": "string"
            },
            "aws:WAFLogFeed": {
              "default": false,
              "description": "Feed is intended for use with WAF. Enforces a strict naming convention required by the provider.",
              "type": "boolean"
            },
            "LogWatchers": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    },
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "LogFilter"
                  ]
                }
              },
              "type": "object"
            },
            "Encrypted": {
              "default": false,
              "type": "boolean"
            },
            "Backup": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "default": "FailedDocumentsOnly",
                  "description": "The backup policy to apply to records",
                  "type": "string",
                  "enum": [
                    "AllDocuments",
                    "FailedDocumentsOnly"
                  ]
                },
                "Enabled": {
                  "default": true,
                  "type": "boolean"
                },
                "FailureDuration": {
                  "default": 3600,
                  "description": "The time in seconds that the data feed will attempt to deliver the data before it is sent to backup",
                  "type": "number"
                }
              }
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "ElasticSearch": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "IndexRotation": {
                  "default": "OneMonth",
                  "description": "When to rotate the index ( the timestamp will be appended to the indexprefix)",
                  "type": "string",
                  "enum": [
                    "NoRotation",
                    "OneDay",
                    "OneHour",
                    "OneMonth",
                    "OneWeek"
                  ]
                },
                "IndexPrefix": {
                  "description": "The prefix applied to generate the index name ( if not using roll over this will be the index name)",
                  "type": "string"
                },
                "DocumentType": {
                  "description": "The document type used when creating the document",
                  "type": "string"
                }
              }
            },
            "deployment:Unit": {
              "type": "string"
            },
            "aws:Partitioning": {
              "description": "Control configuration of dynamic partitioning",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Delimiter": {
                  "description": "Control configuration of delimiter processor",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": false,
                      "description": "Delimiter processor is added after any lambda processors",
                      "type": "boolean"
                    },
                    "Token": {
                      "default": "\\n",
                      "description": "String added to the end of every datafeed record",
                      "type": "string"
                    }
                  }
                },
                "Enabled": {
                  "default": false,
                  "description": "Partitioning can only be set at time of creation so default it to false to cover existing deployments",
                  "type": "boolean"
                }
              }
            },
            "Bucket": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Include": {
                  "description": "Deployment specific details to add to prefix",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "AccountId",
                        "ComponentPath"
                      ],
                      "description": "The order of the included prefixes",
                      "type": "array"
                    },
                    "ComponentPath": {
                      "default": false,
                      "description": "The full component path defaults",
                      "type": "boolean"
                    },
                    "AccountId": {
                      "default": false,
                      "description": "The deployment account id",
                      "type": "boolean"
                    }
                  }
                },
                "Prefix": {
                  "default": "data/",
                  "description": "The prefix appeneded to the object name when processed succesfully",
                  "type": "string"
                },
                "ErrorPrefix": {
                  "default": "error/",
                  "description": "The prefix appeneded to the object name when processing failed",
                  "type": "string"
                }
              }
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Buffering": {
              "description": "How long data should be bufferred before being deliverd to ES",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Size": {
                  "default": 1,
                  "description": "The size in MB before data should be delivered",
                  "type": "number"
                },
                "Interval": {
                  "default": 60,
                  "description": "The time in seconds before data should be delivered",
                  "type": "number"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-datafeed-schema.json"
}
