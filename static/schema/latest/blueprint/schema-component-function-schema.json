{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "function": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Schedules": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "InputPath": {
                      "default": "/healthcheck",
                      "type": "string"
                    },
                    "Input": {
                      "type": "object"
                    },
                    "Expression": {
                      "default": "rate(6 minutes)",
                      "type": "string"
                    }
                  }
                }
              },
              "type": "object"
            },
            "RunTime": {
              "type": "string",
              "enum": [
                "dotnetcore1.0",
                "dotnetcore2.1",
                "go1.x",
                "java8",
                "java11",
                "nodejs",
                "nodejs4.3",
                "nodejs4.3-edge",
                "nodejs6.10",
                "nodejs8.10",
                "nodejs10.x",
                "nodejs12.x",
                "nodejs14.x",
                "python2.7",
                "python3.6",
                "python3.7",
                "python3.8",
                "ruby2.5"
              ]
            },
            "Memory": {
              "default": 0,
              "type": "number"
            },
            "Encrypted": {
              "default": false,
              "type": "boolean"
            },
            "DeploymentType": {
              "default": "REGIONAL",
              "type": "string",
              "enum": [
                "EDGE",
                "REGIONAL"
              ]
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Image": {
              "description": "Control the source of the image that is used for the function",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Source": {
                  "default": "registry",
                  "description": "The source of the image - registry is the hamlet registry",
                  "type": "string",
                  "enum": [
                    "registry",
                    "url"
                  ]
                },
                "UrlSource": {
                  "description": "Url Source specific Configuration",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "ImageHash": {
                      "description": "The expected sha1 hash of the Url if empty any will be accepted",
                      "type": "string"
                    },
                    "Url": {
                      "description": "The Url to the lambda zip file",
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "Source"
              ]
            },
            "FixedCodeVersion": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "CodeHash": {
                  "description": "A sha256 hash of the code zip file",
                  "type": "string"
                },
                "NewVersionOnDeploy": {
                  "default": false,
                  "description": "Create a new version on each deployment",
                  "type": "boolean"
                }
              }
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Permissions": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Decrypt": {
                  "default": true,
                  "type": "boolean"
                },
                "AppData": {
                  "default": true,
                  "type": "boolean"
                },
                "AppPublic": {
                  "default": true,
                  "type": "boolean"
                },
                "AsFile": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "PredefineLogGroup": {
              "default": false,
              "type": "boolean"
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "VPCAccess": {
              "default": true,
              "type": "boolean"
            },
            "LogWatchers": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    },
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "LogFilter"
                  ]
                }
              },
              "type": "object"
            },
            "Timeout": {
              "default": 0,
              "type": "number"
            },
            "ReservedExecutions": {
              "default": -1,
              "type": "number"
            },
            "Handler": {
              "type": "string"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Environment": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Json": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Prefix": {
                      "default": "json",
                      "type": "string",
                      "enum": [
                        "json",
                        ""
                      ]
                    },
                    "Escaped": {
                      "default": true,
                      "type": "boolean"
                    }
                  }
                },
                "AsFile": {
                  "default": false,
                  "type": "boolean"
                }
              }
            },
            "LogMetrics": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "LogFilter"
                  ]
                }
              },
              "type": "object"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "Tracing": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Mode": {
                  "type": "string",
                  "enum": [
                    "active",
                    "passthrough"
                  ]
                }
              }
            }
          },
          "required": [
            "Handler",
            "RunTime"
          ]
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-function-schema.json"
}
