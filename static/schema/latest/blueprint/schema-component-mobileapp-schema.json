{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "mobileapp": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "application",
              "type": "string"
            },
            "UseOTAPrefix": {
              "default": true,
              "description": "Include the OTA Prefix in the OTA Url",
              "type": "boolean"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Image": {
              "description": "Control the source of the image for the mobile ota source zip image",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Source:url": {
                  "description": "Url Source specific Configuration",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "ImageHash": {
                      "description": "The expected sha1 hash of the Url if empty any will be accepted",
                      "type": "string"
                    },
                    "Url": {
                      "description": "The Url to a zip file containing the mobile app source",
                      "type": "string"
                    }
                  }
                },
                "Source": {
                  "default": "registry",
                  "description": "The source of the image - registry: the local hamlet registry - url: an external public url",
                  "type": "string",
                  "enum": [
                    "registry",
                    "url"
                  ]
                }
              },
              "required": [
                "Source"
              ]
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "BuildFormats": {
              "contains": {
                "type": "string"
              },
              "default": [
                "ios",
                "android"
              ],
              "type": "array",
              "enum": [
                "ios",
                "android"
              ]
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Engine": {
              "default": "expo",
              "type": "string",
              "enum": [
                "expo"
              ]
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-mobileapp-schema.json"
}
