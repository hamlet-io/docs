{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "computecluster": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "ScalingPolicies": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Scheduled": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Schedule": {
                          "type": "string"
                        },
                        "ProcessorProfile": {
                          "default": "default",
                          "type": "string"
                        }
                      }
                    },
                    "Type": {
                      "default": "Stepped",
                      "type": "string",
                      "enum": [
                        "Stepped",
                        "Tracked",
                        "Scheduled"
                      ]
                    },
                    "Tracked": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "TargetValue": {
                          "type": "number"
                        },
                        "ScaleInEnabled": {
                          "default": true,
                          "type": "boolean"
                        },
                        "RecommendedMetric": {
                          "description": "Use a recommended (predefined) metric for scaling",
                          "type": "string"
                        }
                      }
                    },
                    "TrackingResource": {
                      "description": "The resource metric used to trigger scaling",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "Link": {
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                        },
                        "MetricTrigger": {
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
                        }
                      }
                    },
                    "Cooldown": {
                      "description": "Cooldown time ( seconds ) after a scaling event has occurred before another event can be triggered",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "ScaleIn": {
                          "default": 300,
                          "type": "number"
                        },
                        "ScaleOut": {
                          "default": 600,
                          "type": "number"
                        }
                      }
                    },
                    "Stepped": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "CapacityAdjustment": {
                          "default": "Change",
                          "description": "How to scale when the policy is triggered",
                          "type": "string",
                          "enum": [
                            "Change",
                            "Exact",
                            "Percentage"
                          ]
                        },
                        "MetricAggregation": {
                          "default": "Average",
                          "description": "The method used to agregate the cloudwatch metric",
                          "type": "string",
                          "enum": [
                            "Average",
                            "Minimum",
                            "Maximum"
                          ]
                        },
                        "Adjustments": {
                          "patternProperties": {
                            "^[A-Za-z_][A-Za-z0-9_]*$": {
                              "additionalProperties": false,
                              "properties": {
                                "LowerBound": {
                                  "description": "The lower bound for the difference between the alarm threshold and the metric",
                                  "type": "number"
                                },
                                "AdjustmentValue": {
                                  "default": 1,
                                  "description": "The value to apply when the adjustment step is triggered",
                                  "type": "number"
                                },
                                "UpperBound": {
                                  "description": "The upper bound for the difference between the alarm threshold and the metric",
                                  "type": "number"
                                }
                              }
                            }
                          },
                          "description": "The adjustments to apply at each step",
                          "type": "object"
                        },
                        "MinAdjustment": {
                          "default": -1,
                          "description": "When minimum scale adjustment value to apply when triggered",
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              },
              "type": "object"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "UseInitAsService": {
              "default": false,
              "type": "boolean"
            },
            "Ports": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "LB": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "LinkName": {
                          "default": "lb",
                          "type": "string"
                        },
                        "Tier": {
                          "type": "string"
                        },
                        "Instance": {
                          "type": "string"
                        },
                        "Version": {
                          "type": "string"
                        },
                        "PortMapping": {
                          "type": "string"
                        },
                        "Component": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Tier",
                        "Component"
                      ]
                    },
                    "IPAddressGroups": {
                      "contains": {
                        "type": "string"
                      },
                      "type": "array"
                    }
                  }
                }
              },
              "type": "object"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Role": {
              "description": "Server configuration role",
              "type": "string"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "DockerHost": {
              "default": false,
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Processor": {
                  "default": "default",
                  "type": "string"
                },
                "Storage": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "azure:ScalingProfiles": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "ScalingRules": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "TimeGrain": {
                              "type": "string"
                            },
                            "Operator": {
                              "type": "string"
                            },
                            "MetricName": {
                              "type": "string"
                            },
                            "ActionType": {
                              "type": "string"
                            },
                            "ActionValue": {
                              "type": "number"
                            },
                            "Statistic": {
                              "type": "string"
                            },
                            "Cooldown": {
                              "type": "string"
                            },
                            "TimeWindow": {
                              "type": "string"
                            },
                            "TimeAggregation": {
                              "type": "string"
                            },
                            "Direction": {
                              "type": "string"
                            },
                            "Threshold": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "MetricName",
                            "TimeGrain",
                            "Statistic",
                            "TimeWindow",
                            "TimeAggregation",
                            "Operator",
                            "Threshold",
                            "Direction",
                            "ActionType",
                            "Cooldown"
                          ]
                        }
                      },
                      "type": "object"
                    },
                    "DefaultCapacity": {
                      "default": 1,
                      "description": "The default capacity of the scaling profile",
                      "type": "number"
                    },
                    "MinCapacity": {
                      "default": 1,
                      "description": "The minimum capacity of the scaling profile",
                      "type": "number"
                    },
                    "MaxCapacity": {
                      "default": 2,
                      "description": "The maximum capacity of the scaling profile",
                      "type": "number"
                    }
                  }
                }
              },
              "type": "object"
            },
            "ComputeInstance": {
              "description": "Configuration of compute instances used in the component",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "OperatingSystem": {
                  "description": "The operating system details of the compute instance",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-operatingsystem-schema.json"
                },
                "OSPatching": {
                  "description": "Configuration for scheduled OS Patching",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-ospatching-schema.json"
                },
                "ComputeTasks": {
                  "description": "Customisation to setup the compute instance from its image",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "UserTasksRequired": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "A list of compute task types which must be accounted for in extensions on top of the component tasks",
                      "type": "array"
                    },
                    "Extensions": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "A list of extensions to source boostrap tasks from",
                      "type": "array"
                    }
                  }
                },
                "Image": {
                  "description": "Configures the source of the virtual machine image used for the instance",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-computeimage-schema.json"
                }
              }
            },
            "AutoScaling": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "MinUpdateInstances": {
                  "default": 1,
                  "description": "The minimum number of instances which must be available during an update",
                  "type": "number"
                },
                "ReplaceCluster": {
                  "default": false,
                  "description": "When set to true a brand new cluster will be built, if false the instances in the current cluster will be replaced",
                  "type": "boolean"
                },
                "DetailedMetrics": {
                  "default": true,
                  "description": "Enable the collection of autoscale group detailed metrics",
                  "type": "boolean"
                },
                "UpdatePauseTime": {
                  "default": "10M",
                  "description": "How long to pause betweeen updates of instances",
                  "type": "string"
                },
                "ActivityCooldown": {
                  "default": 30,
                  "type": "number"
                },
                "MinSuccessInstances": {
                  "default": 75,
                  "description": "The minimum percantage of instances that must sucessfully update",
                  "type": "number"
                },
                "StartupTimeout": {
                  "default": "15M",
                  "description": "How long to wait for a cfn-signal to be received from a host",
                  "type": "string"
                },
                "AlwaysReplaceOnUpdate": {
                  "default": false,
                  "description": "Replace instances on every update action",
                  "type": "boolean"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-computecluster-schema.json"
}
