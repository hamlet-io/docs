{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "lbport": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Path": {
              "default": "default",
              "description": "The http path the rule will be matched on",
              "type": "string"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "Priority": {
              "default": 100,
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ],
              "description": "The priority order for the rule - highest wins. Can also set _default to set the final rule"
            },
            "Mapping": {
              "description": "The Source Destination Port mapping between the frontend and backend",
              "type": "string"
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ],
              "description": "A list of IP Address Groups that can access this port",
              "type": "array"
            },
            "Redirect": {
              "description": "When the rule matches send a redirect response to the client",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Path": {
                  "default": "/#{path}",
                  "type": "string"
                },
                "Query": {
                  "default": "#{query}",
                  "type": "string"
                },
                "Permanent": {
                  "default": true,
                  "type": "boolean"
                },
                "Port": {
                  "default": "443",
                  "type": "string"
                },
                "Host": {
                  "default": "#{host}",
                  "type": "string"
                },
                "Protocol": {
                  "default": "HTTPS",
                  "type": "string",
                  "enum": [
                    "HTTPS",
                    "#{protocol}"
                  ]
                }
              }
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Authentication": {
              "description": "Enable LB integrated authentication for the port rule",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "SessionTimeout": {
                  "default": 604800,
                  "type": "number"
                },
                "SessionCookieName": {
                  "default": "AWSELBAuthSessionCookie",
                  "type": "string"
                }
              }
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Forward": {
              "description": "When the rule matches forward the request to a registered backend",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "StickinessTime": {
                  "default": -1,
                  "type": "number"
                },
                "DeregistrationTimeout": {
                  "default": 30,
                  "type": "number"
                },
                "TargetType": {
                  "default": "instance",
                  "type": "string",
                  "enum": [
                    "instance",
                    "ip"
                  ]
                },
                "StaticEndpoints": {
                  "description": "Static endpoints for the load balancing port",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                },
                "SlowStartTime": {
                  "default": -1,
                  "type": "number"
                }
              }
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "HostFilter": {
              "default": false,
              "description": "Should the http host be considered when the rule is evaluated",
              "type": "boolean"
            },
            "Certificate": {
              "description": "The configuration of the hostname used for this lb port rule",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Wildcard": {
                  "type": "boolean"
                },
                "IncludeInHost": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Tier": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Host": {
                  "type": "string"
                },
                "Domain": {
                  "description": "Explicit domain id which will override the product domain",
                  "type": "string"
                },
                "IncludeInDomain": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "HostParts": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            },
            "Fixed": {
              "description": "When the rule is matched send a fixed http response to the client",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Message": {
                  "default": "This application is currently unavailable. Please try again later.",
                  "type": "string"
                },
                "ContentType": {
                  "default": "text/plain",
                  "type": "string"
                },
                "StatusCode": {
                  "default": "404",
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-lbport-schema.json"
}
