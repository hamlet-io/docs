{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "userpoolclient": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "AuthProviders": {
              "contains": {
                "type": "string"
              },
              "default": [
                "COGNITO"
              ],
              "description": "A list of user pool auth providers which can use this client",
              "type": "array"
            },
            "EncryptionScheme": {
              "description": "A prefix appended to attributes to show encryption status",
              "type": "string"
            },
            "ClientTokenValidity": {
              "default": 30,
              "description": "Time in days that the refresh token is valid for",
              "type": "number"
            },
            "ClientGenerateSecret": {
              "default": false,
              "description": "Generate a client secret which musht be provided in auth calls",
              "type": "boolean"
            },
            "azure:ReplyUrls": {
              "contains": {
                "type": "string"
              },
              "description": "URI's to which Azure AD will redirect in response to an OAuth 2.0 Request",
              "type": "array"
            },
            "OAuth": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Scopes": {
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email",
                    "openid"
                  ],
                  "type": "array",
                  "enum": [
                    "phone",
                    "email",
                    "openid",
                    "aws.cognito.signin.user.admin",
                    "profile"
                  ]
                },
                "Flows": {
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "code"
                  ],
                  "type": "array",
                  "enum": [
                    "code",
                    "implicit",
                    "client_credentials"
                  ]
                },
                "Enabled": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "azure:AllowOtherTenants": {
              "default": false,
              "description": "Application can be used by other Azure AD Tenants.",
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "description": "Apply network security rules based on links",
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "ResourceScopes": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Scopes": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "A list of scopes that the resource offers",
                      "type": "array"
                    },
                    "Name": {
                      "description": "The name of a userpool resource configured for this pool",
                      "type": "string"
                    }
                  },
                  "required": [
                    "Name",
                    "Scopes"
                  ]
                }
              },
              "description": "Resources that the client is permitted to access",
              "type": "object"
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpoolclient-schema.json"
}
