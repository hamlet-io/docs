{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "topicsubscription": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Filters": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Attribute": {
                      "description": "Name of the filter",
                      "type": "string"
                    },
                    "Values": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "Valid values for the filter",
                      "type": "array"
                    },
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                }
              },
              "type": "object"
            },
            "RawMessageDelivery": {
              "default": false,
              "description": "Deliver message as received not with JSON payload strucutre",
              "type": "boolean"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "DeliveryPolicy": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ImmediateRetryAttempts": {
                  "default": 0,
                  "description": "Number of attempts to perform without delay",
                  "type": "number"
                },
                "BackOffMode": {
                  "default": "exponential",
                  "description": "How to process the backoff extensions",
                  "type": "string",
                  "enum": [
                    "linear",
                    "arithmetic",
                    "geometric",
                    "exponential"
                  ]
                },
                "MinimumDelay": {
                  "default": 5,
                  "description": "Minimum delay in seconds between attempts",
                  "type": "number"
                },
                "AttemptsBeforeBackOff": {
                  "default": 2,
                  "description": "Number of attempts before activating backoff",
                  "type": "number"
                },
                "RetryAttempts": {
                  "default": 10,
                  "description": "Total number of attempts to deliver the message",
                  "type": "number"
                },
                "AttemptsAfterBackOff": {
                  "default": 2,
                  "description": "Number of attempts once the backoff has reached its longest delay",
                  "type": "number"
                },
                "MaximumDelay": {
                  "default": 900,
                  "description": "Maximum delay to apply using backoff",
                  "type": "number"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-topicsubscription-schema.json"
}
