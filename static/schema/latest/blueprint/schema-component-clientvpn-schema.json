{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "clientvpn": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "Logging": {
              "default": true,
              "description": "Enable client connection logging",
              "type": "boolean"
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "deployment:Group": {
              "default": "segment",
              "type": "string"
            },
            "Port": {
              "default": "https",
              "description": "The Id of the port reference to use for the public VPN connection",
              "type": "string"
            },
            "deployment:Priority": {
              "default": 100,
              "type": "number"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "AuthorisationRules": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Condition": {
                      "description": "The condition of the rule",
                      "type": "string",
                      "enum": [
                        "allclients",
                        "group"
                      ]
                    },
                    "condition:Group": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "GroupId": {
                          "description": "The Id of the group from the provider to apply the condition to",
                          "type": "string"
                        }
                      }
                    },
                    "Destinations": {
                      "description": "Where VPN clients that match this rule can access",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "IPAddressGroups": {
                          "contains": {
                            "type": "string"
                          },
                          "default": [
                            "_localnet"
                          ],
                          "description": "A list of IP address Groups the VPN can access",
                          "type": "array"
                        }
                      }
                    }
                  }
                }
              },
              "description": "Authorisation rules to apply on VPN Connections",
              "type": "object"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Authentication": {
              "description": "Configure authentication for the VPN",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "MutualTLS": {
                  "default": false,
                  "description": "Require MutualTLS for VPN client connections",
                  "type": "boolean"
                },
                "Provider": {
                  "description": "The details of the authentication provider",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Link": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                }
              }
            },
            "Network": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "ClientCIDR": {
                  "description": "The CIDR Address Range used for vpn clients",
                  "type": "string"
                },
                "ManageDNS": {
                  "default": true,
                  "description": "Should the VPN control the DNS resolution of the client",
                  "type": "boolean"
                },
                "SplitTunnel": {
                  "default": false,
                  "description": "Only route specific traffic over the tunnel",
                  "type": "boolean"
                },
                "Destinations": {
                  "description": "Where VPN Clients can route to",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "IPAddressGroups": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "_localnet"
                      ],
                      "description": "A list of IP address Groups the VPN can access",
                      "type": "array"
                    }
                  }
                }
              },
              "required": [
                "ClientCIDR"
              ]
            },
            "SelfServicePortal": {
              "default": true,
              "description": "Enable the use of a self service portal for VPN Setup",
              "type": "boolean"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "description": "profile to define where logs are forwarded to from this component",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "Certificate": {
              "description": "The certificate hostname to use for the clientVPN",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Wildcard": {
                  "type": "boolean"
                },
                "IncludeInHost": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Tier": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Host": {
                  "type": "string"
                },
                "Domain": {
                  "description": "Explicit domain id which will override the product domain",
                  "type": "string"
                },
                "IncludeInDomain": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "HostParts": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-clientvpn-schema.json"
}
