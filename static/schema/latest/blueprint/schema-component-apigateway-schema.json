{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "apigateway": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "deployment:Group": {
              "default": "application",
              "type": "string"
            },
            "Mapping": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "IncludeStage": {
                  "default": true,
                  "type": "boolean"
                }
              }
            },
            "IPAddressGroups": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Image": {
              "description": "Control the source of the image for the openapi specification",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Source:url": {
                  "description": "Url Source specific Configuration",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "ImageHash": {
                      "description": "The expected sha1 hash of the Url if empty any will be accepted",
                      "type": "string"
                    },
                    "Url": {
                      "description": "The Url to the openapi file",
                      "type": "string"
                    }
                  }
                },
                "Source": {
                  "default": "registry",
                  "description": "The source of the image - registry: the local hamlet registry - url: an external public url - none: no source image",
                  "type": "string",
                  "enum": [
                    "registry",
                    "url",
                    "none"
                  ]
                }
              },
              "required": [
                "Source"
              ]
            },
            "Publishers": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Path": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-contextpath-schema.json"
                    },
                    "UsePathInName": {
                      "default": true,
                      "description": "Name the Swagger Spec file using the path",
                      "type": "boolean"
                    },
                    "Enabled": {
                      "default": true,
                      "type": "boolean"
                    },
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                }
              },
              "type": "object"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Logging": {
                  "default": "default",
                  "type": "string"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Security": {
                  "default": "default",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "EndpointType": {
              "default": "EDGE",
              "type": "string",
              "enum": [
                "EDGE",
                "REGIONAL"
              ]
            },
            "Export": {
              "default": false,
              "type": "boolean"
            },
            "AccessLogging": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "aws:DestinationLink": {
                  "description": "Destination for the Access logs. If not provided but AccessLogging is enabled, Access logs will be sent to CloudWatch.",
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                },
                "aws:KinesisFirehose": {
                  "default": false,
                  "description": "Send Access logs to a KinesisFirehose. By default, the Firehose destination is the OpsData DataBucket, but can be overwritten by specifying a DestinationLink.",
                  "type": "boolean"
                },
                "Enabled": {
                  "default": true,
                  "description": "Logging of the API Gateway Access Logs.",
                  "type": "boolean"
                },
                "aws:LogFormat": {
                  "description": "Log format control",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Syntax": {
                      "default": "text",
                      "type": "string",
                      "enum": [
                        "text",
                        "json"
                      ]
                    }
                  }
                },
                "aws:KeepLogGroup": {
                  "default": true,
                  "description": "Prevent the destruction of existing LogGroups when enabling KinesisFirehose.",
                  "type": "boolean"
                }
              }
            },
            "Publish": {
              "description": "Deprecated - Please switch to the publishers configuration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "DnsNamePrefix": {
                  "default": "docs",
                  "type": "string"
                },
                "IPAddressGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            },
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "MutualTLS": {
              "description": "Configuration for enabling mutualTLS authentication for clients",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Enabled": {
                  "default": false,
                  "type": "boolean"
                },
                "CertificateAuthority": {
                  "description": "The configuration for the certificate authority used to validate client certificates",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Source:link": {
                      "description": "Use a component to source the RootCA Value",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "RootCACertAttribute": {
                          "default": "ROOTCA_PEM",
                          "description": "The attribute of the linked component which provides the certificate for the rootCA",
                          "type": "string"
                        },
                        "Link": {
                          "description": "A link to a component that has tbe PEM file",
                          "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                        }
                      }
                    },
                    "Source:filesetting": {
                      "description": "Use an asFile Setting on the apigateway for RootCA Public cert",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "FileName": {
                          "default": "rootCA.pem",
                          "description": "The name of the asFile setting",
                          "type": "string"
                        }
                      }
                    },
                    "Source": {
                      "default": "filesetting",
                      "description": "The way to source the certificate authority details",
                      "type": "object"
                    }
                  }
                }
              }
            },
            "deployment:Priority": {
              "default": 50,
              "type": "number"
            },
            "azure:Contact": {
              "description": "The contact for the API Management Service",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Email": {
                  "type": "string"
                },
                "Name": {
                  "type": "string"
                }
              }
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Versions": {
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Type": {
              "description": "The components type",
              "type": "string"
            },
            "CloudFront": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Compress": {
                  "default": true,
                  "type": "boolean"
                },
                "EnableLogging": {
                  "default": true,
                  "type": "boolean"
                },
                "AssumeSNI": {
                  "default": true,
                  "type": "boolean"
                },
                "CountryGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Mapping": {
                  "default": false,
                  "type": "boolean"
                },
                "CustomHeaders": {
                  "type": "array"
                }
              }
            },
            "BasePathBehaviour": {
              "default": "ignore",
              "description": "How to handle base paths provided in the spec",
              "type": "string",
              "enum": [
                "ignore",
                "prepend",
                "split"
              ]
            },
            "deployment:Unit": {
              "type": "string"
            },
            "Authentication": {
              "default": "IP",
              "type": "string",
              "enum": [
                "IP",
                "SIG4ORIP",
                "SIG4ANDIP"
              ]
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "LogMetrics": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "LogFilter"
                  ]
                }
              },
              "type": "object"
            },
            "Tracing": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Mode": {
                  "type": "string",
                  "enum": [
                    "active",
                    "passthrough"
                  ]
                }
              }
            },
            "WAF": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Logging": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Enabled": {
                      "default": true,
                      "type": "boolean"
                    }
                  }
                },
                "RateLimits": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "additionalProperties": false,
                      "properties": {
                        "IPAddressGroups": {
                          "contains": {
                            "type": "string"
                          },
                          "type": "array"
                        },
                        "Limit": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "Limit"
                      ]
                    }
                  },
                  "type": "object"
                },
                "OWASP": {
                  "default": false,
                  "type": "boolean"
                },
                "Profiles": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Logging": {
                      "default": "waf",
                      "description": "Logging profile to process WAF Logs that are stored in the OpsData DataBucket.",
                      "type": "string"
                    }
                  }
                },
                "CountryGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "IPAddressGroups": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            },
            "Certificate": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Wildcard": {
                  "type": "boolean"
                },
                "IncludeInHost": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Tier": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Host": {
                  "type": "string"
                },
                "Domain": {
                  "description": "Explicit domain id which will override the product domain",
                  "type": "string"
                },
                "IncludeInDomain": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "HostParts": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-apigateway-schema.json"
}
